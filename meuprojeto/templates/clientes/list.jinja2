<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Clientes</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    escura: '#4c4343',
                    rosaClaro: '#f3e7e2',
                    quaseBranco: '#f7f2f2',
                    brancoPuro: '#fcfaf9',
                },
            }
        }
    }
    </script>
</head>
<body class="bg-quaseBranco text-escura min-h-screen font-sans" style="font-family: 'Quicksand', sans-serif;">
    <div class="container mx-auto p-8">
        <h1 class="text-4xl font-bold mb-8 text-center">Clientes Cadastrados</h1>

        <table class="w-full bg-white shadow rounded-lg overflow-hidden">
            <thead class="bg-escura text-white">
                <tr>
                    <th class="p-4 text-left">Nome</th>
                    <th class="p-4 text-left">E-mail</th>
                    <th class="p-4 text-left">Telefone</th>
                </tr>
            </thead>
            <tbody>
                {% for c in clients %}
                <tr class="border-b hover:bg-rosaClaro">
                    <td class="p-4">{{ c.nome }}</td>
                    <td class="p-4">{{ c.email or '-' }}</td>
                    <td class="p-4">{{ c.telefone or '-' }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>
